{
    "configurations": [
        {
            "command": "npm run dev",
            "name": "Javascript Build Debugger: NPM",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}\\manage.py",
        },
    ],
    "compounds": [
        {
            "name": "_Django + NPM Debugger",
            "configurations": [
                "Python Debugger: Django", "Javascript Build Debugger: NPM"
            ],
            "stopAll": true
        }
    ]
}